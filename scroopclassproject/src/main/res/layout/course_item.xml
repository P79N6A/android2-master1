<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/course_item_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/course_item_iv_pic"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@drawable/ivnull" />

        <TextView
            android:id="@+id/course_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/course_item_iv_pic"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="你还记得积分"
            android:textColor="#282828"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/course_item_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_item_tv_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/course_item_iv_pic"
            android:text="9-0"
            android:textColor="@color/super_main_press"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
