<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wh.wang.scroopclassproject.newproject.ui.fragment.details_frag.CourseOrderDetailsFragment">

    <RelativeLayout
        android:id="@+id/order_details_title"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <ImageView
            android:id="@+id/order_details_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/jiaoyi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易已完成"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/order_details_icon"
            android:textColor="#282828"
            android:textSize="16sp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/order_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_details_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#282828"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/cost_price"
                android:text="勺子金牌讲师：餐饮外卖流程，教你做餐饮外卖流程，教你做"
                android:layout_marginRight="30dp"/>

            <TextView
                android:id="@+id/cost_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#282828"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:text="原价￥28889"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F2F4F7"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#282828"
                android:textSize="12sp"
                android:text="实付"
                android:layout_marginRight="45dp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#79ca0b"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:text="￥28889"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/order_details_content"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#AEB4BC"
            android:text="订单号："/>

        <TextView
            android:id="@+id/place_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginTop="8dp"
            android:textColor="#AEB4BC"
            android:text="下单时间："/>

        <TextView
            android:id="@+id/pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginTop="8dp"
            android:textColor="#AEB4BC"
            android:text="付款时间："/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/course_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="13sp"
            android:text="查看课程详情"
            android:background="#8dc63f"/>

        <TextView
            android:id="@+id/course_url"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="13sp"
            />
    </LinearLayout>

</RelativeLayout>
