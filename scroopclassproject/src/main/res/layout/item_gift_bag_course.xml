<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/course_img"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:src="@drawable/ivnull"
        android:scaleType="centerCrop"
        app:riv_corner_radius_top_left="4dp"
        app:riv_corner_radius_top_right="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/shape_gift_course_bottom_bg"
        android:layout_below="@+id/course_img">
        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/video_title_v"
            android:textSize="16sp"
            android:text="6步打破餐厅采购困局"/>


        <TextView
            android:id="@+id/course_learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/video_title"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:text="2333人学习"/>
    </LinearLayout>
</RelativeLayout>