<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_centerInParent="true"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/event_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:alpha="1"
        android:background="@drawable/event_dialog_close" />


    <RelativeLayout
        android:id="@+id/event_dialog_top_all"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@+id/event_dialog_close"
        android:alpha="1"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/event_dialog_top"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/event_dialog">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="添加报名账号"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/event_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/event_dialog_top"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/et_event_from_selector"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:hint="姓名"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="#454545"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/event_dialog_tel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/event_dialog_name"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/et_event_from_selector"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:hint="手机号"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="#454545"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/event_dialog_rlayout_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/event_dialog_tel"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_pass_selector">

            <TextView
                android:id="@+id/login_new_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lineSpacingExtra="2dp"
                android:text="确认添加"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/login_new_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/login_worning"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>