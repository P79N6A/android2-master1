<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wh.wang.scroopclassproject.newproject.ui.fragment.result_frag.PayResultFragment">

    <RelativeLayout
        android:id="@+id/many_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/success_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/success"/>
            <TextView
                android:id="@+id/result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/success_icon"
                android:layout_centerHorizontal="true"
                android:text="@string/pay_success"
                android:textColor="#282828"
                android:layout_marginTop="16dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/examine_ll"
                android:layout_below="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/examine_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/result_tv"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/apply_examine_bg"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="6dp"
                    android:text="查看课程"
                    android:visibility="gone"
                    android:textColor="#A0A4A9"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/one_key_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="一键分享企业号"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="#A0A4A9"/>
            </LinearLayout>


            <TextView
                android:id="@+id/result_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/examine_ll"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/pay_success_hint"
                android:textColor="#888686"
                android:textSize="12sp"/>
        </RelativeLayout>

        <View
            android:id="@+id/cut_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/head"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#F2F4F7"/>

        <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
            android:id="@+id/share_url_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/head"
            android:layout_marginTop="15dp"
            android:background="#fff">

            <android.support.v7.widget.RecyclerView
                android:id="@id/swipe_target"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
            <include
                android:id="@id/swipe_load_more_footer"
                layout="@layout/layout_foot"/>
        </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/single_pay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:id="@+id/single_head"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/chahua">
            <ImageView
                android:id="@+id/single_success_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="45dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/success"/>
            <TextView
                android:id="@+id/single_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/single_success_icon"
                android:layout_centerHorizontal="true"
                android:text="@string/pay_success"
                android:textColor="#282828"
                android:layout_marginTop="16dp"
                android:textSize="18sp"/>
        </RelativeLayout>
        
        <TextView
            android:id="@+id/single_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#fff"
            android:textSize="13sp"
            android:text="点击查看课程"
            android:gravity="center"
            android:layout_below="@+id/single_head"
            android:background="@drawable/apply_share_bg"/>
    </RelativeLayout>
</RelativeLayout>
