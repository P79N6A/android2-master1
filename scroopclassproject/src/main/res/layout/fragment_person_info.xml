<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wh.wang.scroopclassproject.newproject.ui.fragment.register_frag.PersonInfoFragment">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/register_h"
        android:gravity="center_vertical"
        android:textColor="#282828"
        android:text="姓名"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_h"
        android:layout_toRightOf="@+id/name_tv"
        android:layout_marginLeft="15dp"
        android:gravity="right|center_vertical"
        android:hint="请填写"
        android:textSize="13sp"
        android:background="@null"
        android:layout_marginRight="15dp"
        android:textColor="#282828"
        android:textColorHint="#9eadc3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F2F4F7"
        android:layout_below="@+id/name_tv"/>

    <TextView
        android:id="@+id/position_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/register_h"
        android:gravity="center_vertical"
        android:textColor="#282828"
        android:text="职位"
        android:layout_below="@+id/name_tv"
        android:layout_marginTop="0.5dp"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_h"
        android:layout_toRightOf="@+id/position_tv"
        android:layout_below="@+id/name_tv"
        android:layout_marginLeft="15dp"
        android:gravity="right|center_vertical"
        android:hint="请填写"
        android:background="@null"
        android:textSize="13sp"
        android:layout_marginRight="15dp"
        android:textColor="#282828"
        android:textColorHint="#9eadc3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F2F4F7"
        android:layout_below="@+id/position_tv"/>

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/register_h"
        android:gravity="center_vertical"
        android:textColor="#282828"
        android:text="邮箱"
        android:layout_below="@+id/position_tv"
        android:layout_marginTop="0.5dp"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_h"
        android:layout_toRightOf="@+id/email_tv"
        android:layout_below="@+id/position_tv"
        android:layout_marginLeft="15dp"
        android:gravity="right|center_vertical"
        android:hint="请填写"
        android:textSize="13sp"
        android:background="@null"
        android:layout_marginRight="15dp"
        android:textColor="#282828"
        android:textColorHint="#9eadc3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F2F4F7"
        android:layout_below="@+id/email_tv"/>

    <TextView
        android:id="@+id/identity_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/register_h"
        android:gravity="center_vertical"
        android:textColor="#282828"
        android:text="身份证号"
        android:layout_below="@+id/email_tv"
        android:layout_marginTop="0.5dp"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/identity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_h"
        android:layout_toRightOf="@+id/identity_tv"
        android:layout_below="@+id/email_tv"
        android:layout_marginLeft="15dp"
        android:gravity="right|center_vertical"
        android:hint="请填写您的身份证"
        android:textSize="13sp"
        android:background="@null"
        android:layout_marginRight="15dp"
        android:textColor="#282828"
        android:textColorHint="#9eadc3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F2F4F7"
        android:layout_below="@+id/identity_tv"/>


    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/identity_tv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/register_next_bg"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="13sp"
        android:text="@string/next"/>
</RelativeLayout>
