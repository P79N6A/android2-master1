        android:gravity="center"
        android:textColor="#fff"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="我的奖励"
        android:textSize="14sp"
        android:background="@drawable/apply_share_bg_3dp"/>

