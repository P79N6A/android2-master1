<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <RelativeLayout
        android:id="@+id/mine_feedback_rlayout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/mine_feedback_llayout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/mine_feedback_rlayout_right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_shape_corner">

                <TextView
                    android:id="@+id/mine_feedback_tv_right_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:maxEms="12"
                    android:singleLine="false"
                    android:text="sfjslkfjlsafjlsfjlsfjlsf"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/mine_feedback_iv_right_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/mine_feedback_rlayout_right_content"
                android:background="@drawable/feedback_right_small" />

            <RelativeLayout
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/pic_shape_corner_bg3">

                <com.wh.wang.scroopclassproject.views.RoundImageView
                    android:id="@+id/mine_feedback_iv_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/mine_talk" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/mine_feedback_rlayout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_feedback_rlayout_right">

        <LinearLayout
            android:id="@+id/mine_feedback_llayout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.wh.wang.scroopclassproject.views.RoundImageView
                android:id="@+id/mine_feedback_iv_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp" />

            <ImageView
                android:id="@+id/mine_feedback_iv_left_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/feedback_left_small" />

            <RelativeLayout
                android:id="@+id/mine_feedback_rlayout_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/feedback_shape_corner">

                <TextView
                    android:id="@+id/mine_feedback_tv_left_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:maxEms="12"
                    android:singleLine="false"
                    android:text="sfjslkfjlsafjlsfjlsfjlsf"
                    android:textColor="#302f2f"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
