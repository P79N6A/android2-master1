<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f4f7"
    tools:context="com.wh.wang.scroopclassproject.newproject.ui.fragment.result_frag.ApplyResultFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:background="#fff">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/chahua"/>
                <ImageView
                    android:id="@+id/success_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/success"/>

                <TextView
                    android:id="@+id/result_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/success_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="支付成功"
                    android:textColor="#282828"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/apply_no_vip_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/head">

                <LinearLayout
                    android:id="@+id/menu"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    android:background="#fff">
                    <TextView
                        android:id="@+id/comm_group"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#556378"
                        android:textSize="13sp"
                        android:text="进交流群"
                        android:gravity="center"
                        android:background="@drawable/shape_free_bg"/>

                    <TextView
                        android:id="@+id/topapply_detail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/apply_share_bg"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        android:textSize="13sp"
                        android:text="查看报名详情"
                        android:gravity="center"/>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/service_content"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:visibility="gone"
                    android:layout_below="@+id/menu">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        app:riv_oval="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ivnull"/>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/avatar"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:maxEms="9"
                        android:singleLine="true"
                        android:textColor="@color/video_title_v"
                        android:text="专属顾问"/>

                    <ImageView
                        android:id="@+id/tel"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/dianhuaxiaoicon"/>


                    <ImageView
                        android:id="@+id/wx"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tel"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/weixinxiaoicon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/course_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_below="@+id/service_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/course_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/bw_bt_icon"/>
                    <TextView
                        android:id="@+id/course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@+id/course_icon"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#282828"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/time_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_below="@+id/course_title">

                    <ImageView
                        android:id="@+id/time_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/bw_time_icon"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@+id/time_icon"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#282828"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/address_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_below="@+id/time_title">

                    <ImageView
                        android:id="@+id/address_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/bw_position_icon"/>
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@+id/address_icon"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#282828"
                        android:textSize="14sp"/>
                </RelativeLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/order_background"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:drawablePadding="6dp"
                    android:drawableLeft="@drawable/icon_check_vip"
                    android:textColor="@color/vip_tip_textcolor"
                    android:text="报名者信息"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/__picker_common_primary"></View>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_querenlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/apply_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ck_baoming_tx"
            android:textColor="#fff"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:text="查看报名详情"
            android:gravity="center"/>
        <TextView
            android:id="@+id/apply_continue"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/apply_baoming"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="继续报名"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"/>

    </LinearLayout>
</RelativeLayout>
