<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lr_register_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/lr_register_two_margin_left"
        android:layout_marginRight="@dimen/lr_register_two_margin_right">

        <ImageView
            android:id="@+id/register_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/mylogo" />

        <ImageView
            android:id="@+id/register_iv_tip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/register_iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_tip"/>

        <LinearLayout
            android:id="@+id/llayout_register_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lr_register_height"
            android:layout_below="@+id/register_iv_tip"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_corner"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_register_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/telphone" />

            <EditText
                android:id="@+id/et_register_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lr_register_height"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="#FF000000"
                android:textColorHint="#FF999999"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_register_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lr_register_height"
            android:layout_below="@+id/llayout_register_user"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_corner"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_register_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/password" />

            <EditText
                android:id="@+id/et_register_passwords"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lr_register_height"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请输入6至18位的密码"
                android:inputType="textPassword"
                android:paddingLeft="3dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF999999"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_register_repass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lr_register_height"
            android:layout_below="@+id/llayout_register_pass"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_corner"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_register_repass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/password" />

            <EditText
                android:id="@+id/et_register_repasswords"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lr_register_height"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请确认密码"
                android:inputType="textPassword"
                android:paddingLeft="3dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF999999"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lr_register_height"
            android:layout_below="@+id/llayout_register_repass"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_selector"
            android:padding="4dp"
            android:text="立即注册"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/register_no_resinge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="已有账号,立即登录"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
