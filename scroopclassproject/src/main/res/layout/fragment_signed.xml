<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cfqd"
    tools:context="com.wh.wang.scroopclassproject.newproject.ui.fragment.scan_resule_frag.SignedFragment">

    <TextView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="237dp"
        android:textSize="28sp"
        android:textColor="@color/originator"
        android:text="该用户今日已签到"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="2dp"
        android:layout_below="@+id/flag">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/video_title_v"
            android:textSize="18sp"
            android:text="姓名："/>

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/video_title_v"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:text="手机号："/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/video_title_v"
        android:text="请确认用户是否重复签到或\n是否本人签名"/>

</RelativeLayout>
