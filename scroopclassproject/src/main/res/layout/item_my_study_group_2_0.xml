<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="13dp"
    android:paddingRight="10dp"
    android:background="#fff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_course"
        android:layout_width="128dp"
        android:layout_height="70dp"
        app:riv_corner_radius="3dp"
        android:src="@drawable/ivnull"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/tiaozhan_icon"
        android:layout_width="42dp"
        android:layout_height="21dp"
        android:layout_alignLeft="@+id/img_course"
        android:layout_alignTop="@+id/img_course"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-4dp"
        android:visibility="gone"
        android:src="@drawable/tiaozhanban"/>

    <TextView
        android:id="@+id/title_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/video_title_v"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/img_course"
        android:layout_toRightOf="@+id/img_course"
        android:singleLine="true"
        android:text=""/>

    <!--<TextView-->
        <!--android:id="@+id/my_rank"-->
        <!--android:layout_width="wrap_content"-->
