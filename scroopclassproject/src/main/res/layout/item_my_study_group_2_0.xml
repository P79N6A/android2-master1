        <!--android:textSize="11sp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:textColor="@color/originator"-->
        <!--android:layout_toRightOf="@+id/img_course"-->
        <!--android:singleLine="true"-->
        <!--android:text=""/>-->

    <!--<ImageView-->
        <!--android:id="@+id/icon_course"-->
