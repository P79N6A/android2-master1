        <!--android:layout_alignBottom="@+id/img_course"-->
        <!--android:layout_marginBottom="1dp"-->
        <!--android:src="@drawable/xiaojie"/>-->
    <TextView
        android:id="@+id/apply_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_course"
        android:layout_alignBottom="@+id/img_course"
        android:textSize="11sp"
        android:gravity="center"
        android:text="报名人数："
        android:textColor="@color/video_title"/>

    <TextView
        android:id="@+id/imm_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_course"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#fff"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="打卡"
        android:background="@drawable/shape_sg_main_oval_bg"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f2f4f7"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>