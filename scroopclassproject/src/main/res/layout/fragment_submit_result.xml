<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wh.wang.scroopclassproject.newproject.ui.fragment.register_frag.SubmitResultFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/result_icon"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/step_3_ch"/>

    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textColor="#282828"
        android:textSize="13sp"
        android:text="提交成功"/>

    <TextView
        android:id="@+id/result_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_title"
        android:layout_centerHorizontal="true"
        android:textColor="#888686"
        android:textSize="11sp"
        android:layout_marginTop="6dp"
        android:text="工作人员会尽快与您取得联系"/>

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/result_hint"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/register_next_bg"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="13sp"
        android:text="完成"/>
</RelativeLayout>
