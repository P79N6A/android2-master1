<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qdcg"
    tools:context="com.wh.wang.scroopclassproject.newproject.ui.fragment.scan_resule_frag.SuccessFragment">

    <TextView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="237dp"
        android:textSize="28sp"
        android:textColor="@color/originator"
        android:text="签到成功"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/flag"
        android:layout_marginTop="40dp"
        android:text="姓名："
        android:textColor="@color/video_title_v"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:text="手机号："
        android:textColor="@color/video_title_v"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tel"
        android:layout_marginTop="10dp"
        android:text="课程："
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/video_title_v"
        android:textSize="18sp"/>

</RelativeLayout>
