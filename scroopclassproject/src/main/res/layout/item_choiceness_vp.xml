<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <android.support.v4.view.ViewPager
        android:id="@+id/carousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/main_hint"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#fff"
        android:layout_below="@+id/carousel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:paddingLeft="10dp"
            android:background="@drawable/shape_main_hint_bg">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/home_bqpic_ts"/>

            <TextView
                android:id="@+id/hint_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:textColor="#826f24"
                android:layout_gravity="center_vertical"
                android:text="@string/order_main_hint"/>

            <ImageView
                android:id="@+id/hint_close"
                android:layout_width="30dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/home_bqpic_close"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>