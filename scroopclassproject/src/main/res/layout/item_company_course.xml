<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f4f7">

    <FrameLayout
        android:id="@+id/time_frag"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/time"
            android:layout_width="124dp"
            android:layout_height="18dp"
            android:text="2018年1月08日 周四"
            android:textSize="11sp"
            android:gravity="center"
            android:background="@drawable/shape_time_bg"
            android:textColor="#fff"/>
    </FrameLayout>
    
    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/time_frag"
        android:background="@drawable/shape_white_corner">
        <RelativeLayout
            android:id="@+id/course_info"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:id="@+id/course_img"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/ivnull"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/course_img"
                android:layout_alignBottom="@+id/course_img"
                android:layout_toRightOf="@+id/course_img"
                android:layout_toLeftOf="@+id/remind"
                android:layout_marginLeft="10dp"
                android:textColor="#282828"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="大型餐饮企业如何注册商标"
                android:layout_marginRight="30dp"/>
            
            <TextView
                android:id="@+id/remind"
                android:layout_width="54dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="查看课程"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="9sp"
                android:background="@drawable/shape_remind"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#f2f4f7"
            android:layout_below="@+id/course_info"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/course_info">
            <TextView
                android:id="@+id/learned_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5b5b5b"
                android:textSize="21sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:text=""/>

            <TextView
                android:id="@+id/learned_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9a9a9a"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/learned_num"
                android:layout_alignBottom="@+id/learned_num"
                android:layout_marginRight="58dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="4dp"
                android:text="人已学完"/>



            <TextView
                android:id="@+id/rank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9a9a9a"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/learned_tv"
                android:layout_alignBottom="@+id/learned_num"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:text="当前排名"/>


            <TextView
                android:id="@+id/learning_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5b5b5b"
                android:textSize="21sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/rank_tv"
                android:layout_centerVertical="true"
                android:text="0"/>

            <TextView
                android:id="@+id/learning_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9a9a9a"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/learning_num"
                android:layout_alignBottom="@+id/learned_num"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="4dp"
                android:text="人未学完"/>

            <ImageView
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/intonext"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>