<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/superiror_three_three_rlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/superiror_three_three_rlayout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="/  热门课程  /"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/superiror_three_three_rlayout_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/superiror_three_three_rlayout_title_iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/rightarro" />

            <TextView
                android:id="@+id/superiror_three_three_rlayout_title_tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/superiror_three_three_rlayout_title_iv_more"
                android:text="更多"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/superiror_three_three_one_rlayout_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/superiror_three_three_rlayout_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/superiror_three_three_one_iv"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:src="@drawable/ivnull" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:background="#60000000">

            <TextView
                android:id="@+id/superiror_three_three_one_tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="海淀。。。。"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/superiror_three_three_one_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="9.4"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/superiror_three_three_one_tv_mthreey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="¥99"
                android:textColor="@color/main_color" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/superiror_three_three_one_rlayout_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/superiror_three_three_two_rlayout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/superiror_three_three_two_iv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ivnull" />

            <TextView
                android:id="@+id/superiror_three_three_two_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/superiror_three_three_two_iv"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="员工幸福是一切餐厅经营的原点"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_three_three_two_tv_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:text="主讲"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_three_three_two_tv_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:text="234已学"
                android:textSize="14sp"
                android:visibility="invisible" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/superiror_three_three_three_rlayout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/superiror_three_three_three_iv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ivnull" />

            <TextView
                android:id="@+id/superiror_three_three_three_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/superiror_three_three_three_iv"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="员工幸福是一切餐厅经营的原点"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_three_three_three_tv_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:text="主讲"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_three_three_three_tv_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/superior_item_rlayout_marginbottom"
                android:text="234已学"
                android:textSize="14sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>