<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.wh.wang.scroopclassproject.newproject.fun_class.study_group.activity.activity2_0.CommitRemarkActivity">

    <EditText
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:hint="写下心得，记录思考历程......"/>


    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/remark"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/apply_share_bg_3dp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:text="提交心得"/>
</RelativeLayout>
