<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">
    <View
        android:id="@+id/cut_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F4F7"/>
    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:layout_below="@+id/cut_line"
        android:text="订单号: 201712226556546515"
        android:gravity="center"/>

    <TextView
        android:id="@+id/order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/order_id"
        android:layout_alignBottom="@+id/order_id"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textSize="13sp"
        android:textColor="#8DC63f"
        android:text="公开课"
        android:gravity="center"/>
    <View
        android:id="@+id/cut_line_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f8f8fa"
        android:layout_below="@+id/order_id"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    
    <RelativeLayout
        android:id="@+id/order_info"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/cut_line_top">

        <ImageView
            android:id="@+id/order_img"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ivnull"/>
        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/order_img"
            android:layout_alignTop="@+id/order_img"
            android:textSize="13sp"
            android:textColor="#282828"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="45dp"
            android:text="成为未来的餐饮玩家，你将需要成为未来的餐饮玩家，你将需要"/>

        <TextView
            android:id="@+id/order_course_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/order_img"
            android:layout_alignBottom="@+id/order_img"
            android:textSize="12sp"
            android:textColor="#282828"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="45dp"
            android:text="￥0.00"/>
    </RelativeLayout>

    <View
        android:id="@+id/cut_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f8f8fa"
        android:layout_below="@+id/order_info"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/cut_line_bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="#AEB4BC"
            android:text="2017-12-06"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#282828"
            android:textSize="11sp"
            android:text="合计:"
            android:layout_toLeftOf="@+id/order_price"/>

        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#282828"
            android:textSize="12sp"
            android:text="￥0.00"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>