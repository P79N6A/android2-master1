<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:id="@+id/item_coupon"
    android:background="@drawable/shape_coupon_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minHeight="90dp"
        android:layout_margin="5dp"
        android:paddingLeft="15dp"
        android:background="@drawable/shape_coupon_dash_corner">
        <TextView
            android:id="@+id/coupon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/coupon_price"
            android:singleLine="true"
            android:textColor="@color/video_title_v"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/coupon_price"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:textSize="48sp"
            android:textColor="@color/main_color"
            android:text="100"
            android:layout_toLeftOf="@+id/coupon_unit"
            android:gravity="top"/>

        <TextView
            android:id="@+id/coupon_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            android:text="元"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/coupon_price"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_name"
            android:layout_marginTop="5dp"
            android:textColor="@color/video_title"
            android:textSize="12sp"
            android:text="有效期至2018.7.31"/>

        <TextView
            android:id="@+id/coupon_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_time"
            android:textColor="@color/video_title"
            android:textSize="12sp"
            android:text="更多使用规则"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_bottom"/>

        <TextView
            android:id="@+id/coupon_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_price"
            android:layout_alignRight="@+id/coupon_unit"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/video_title_v"
            android:text="满199元减99元"/>

        <LinearLayout
            android:id="@+id/coupon_rule_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_rule"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="32dp"
            android:visibility="gone"
            android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/coupon_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:riv_corner_radius_top_left="3dp"
        android:visibility="gone"
        android:src="@drawable/oval"/>
    <ImageView
        android:id="@+id/coupon_status"
        android:layout_width="87dp"
        android:layout_height="64dp"
        android:visibility="gone"
        android:layout_marginTop="34dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/coupon_used"/>
</RelativeLayout>