<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    android:background="@drawable/bag_entergroup">
    <ImageView
        android:id="@+id/close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:src="@drawable/dailog_close"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

        <FrameLayout
            android:id="@+id/apply_result_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="105dp">
            <ImageView
                android:id="@+id/qr_img"
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/apply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#282828"
            android:textSize="15sp"
            android:visibility="gone"
            android:text="进课程交流群"/>
        <TextView
            android:id="@+id/apply_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#556378"
            android:textSize="13sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="添加班主任微信勺布斯"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#556378"
            android:textSize="13sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="申请进群"/>
        <TextView
            android:id="@+id/tv_wxnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#556378"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="申请进群"/>

    </LinearLayout>


</FrameLayout>