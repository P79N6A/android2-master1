<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reconnection_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4f7"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/reconnection_gif"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/reconnection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reconnection_gif"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textColor="#A5A9B1"
            android:textSize="14sp"
            android:text="网络异常,请检查网络连接"/>

        <TextView
            android:id="@+id/reconnection"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/reconnection_title"
            android:textSize="12sp"
            android:textColor="#A5A9B1"
            android:text="点击刷新"
            android:gravity="center"
            android:background="@drawable/reconnection_shape"/>
    </RelativeLayout>

</RelativeLayout>