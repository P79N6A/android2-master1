<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#fff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/msg_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:riv_oval="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ivnull"/>

    <TextView
        android:id="@+id/msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/msg_icon"
        android:layout_toRightOf="@+id/msg_icon"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="h霍赞了你"
        android:textColor="#757575"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/msg_info"
        android:layout_marginRight="15dp"
        android:text="18-1-12"
        android:textColor="#757575"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:background="#f2f4f7"/>

    <TextView
        android:id="@+id/msg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收到的赞"
        android:textColor="#282828"
        android:textSize="16sp"
        android:maxEms="4"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignTop="@+id/msg_icon"
        android:layout_toRightOf="@+id/msg_icon"/>



    <TextView
        android:id="@+id/msg_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/msg_name"
        android:layout_alignBottom="@+id/msg_name"
        android:textSize="12sp"
        android:text="赞了你"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="1dp"/>
</RelativeLayout>