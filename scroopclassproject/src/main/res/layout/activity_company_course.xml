<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wh.wang.scroopclassproject.newproject.ui.activity.CompanyCourseActivity">

    <RelativeLayout
        android:id="@+id/company_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="#FF4894f2">
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/jc_back_normal"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="我的企业"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="添加"/>
    </RelativeLayout>
    <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
        android:id="@+id/frag_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4894f2"
        android:layout_below="@+id/company_title">

    <include
        android:id="@id/swipe_refresh_header"
        layout="@layout/layout_header"/>
        <ScrollView
            android:id="@id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/company_title"
            android:background="#fff"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:background="#4894f2">


                    <TextView
                        android:id="@+id/company_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/company_per_pos"
                        android:layout_centerHorizontal="true"
                        android:textSize="19sp"
                        android:textColor="#fff"
                        android:text=""
                        android:layout_marginRight="45dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="25sp"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/company_group_name"
                        android:layout_toLeftOf="@+id/company_group_num"
                        android:layout_alignBottom="@+id/company_group_num"
                        android:layout_alignTop="@+id/company_group_num"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/learn_list_time"/>
                    <TextView
                        android:id="@+id/company_group_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/company_group_name"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:text=""
                        android:layout_marginTop="9dp"/>
                    <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="@drawable/qiye_bg">-->
                    <!--</RelativeLayout>-->
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:layout_marginTop="112dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    android:elevation="8dp"
                    android:background="@drawable/shape_white_corner">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/learned_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#5b5b5b"
                                android:textSize="26sp"/>

                            <TextView
                                android:id="@+id/per"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人"
                                android:layout_toRightOf="@+id/learned_num"
                                android:textColor="#5b5b5b"
                                android:textSize="14sp"
                                android:layout_alignBottom="@+id/learned_num"
                                android:layout_marginBottom="3dp"/>

                            <TextView
                                android:id="@+id/learned_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已学完"
                                android:layout_below="@+id/per"
                                android:textColor="#5b5b5b"
                                android:textSize="12sp"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </FrameLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="#F2F4F7"
                        android:layout_gravity="center_vertical"/>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/time_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#5b5b5b"
                                android:textSize="26sp"/>

                            <TextView
                                android:id="@+id/min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分钟"
                                android:layout_toRightOf="@+id/time_num"
                                android:textColor="#5b5b5b"
                                android:textSize="14sp"
                                android:layout_alignBottom="@+id/time_num"
                                android:layout_marginBottom="3dp"/>

                            <TextView
                                android:id="@+id/average"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人均学习"
                                android:layout_below="@+id/min"
                                android:textColor="#5b5b5b"
                                android:textSize="12sp"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>

                    </FrameLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/learned_title"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#fff"
                    android:layout_below="@+id/card"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/learned_per"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textColor="#282828"
                        android:layout_toLeftOf="@+id/one_key_like"
                        android:textSize="15sp"
                        android:text="已学完(0人)"/>

                    <TextView
                        android:id="@+id/one_key_like"
                        android:layout_width="70dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:text="一键点赞"
                        android:visibility="gone"
                        android:gravity="center"
                        android:background="@drawable/imm_vip_shape"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#f2f4f7"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/learned_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginTop="0.5dp"
                    android:layout_below="@+id/learned_title">
                </android.support.v7.widget.RecyclerView>

                <RelativeLayout
                    android:id="@+id/never_learned_title"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#fff"
                    android:layout_below="@+id/learned_list">

                    <TextView
                        android:id="@+id/never_learned"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_toLeftOf="@+id/one_key_remind"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textColor="#282828"
                        android:textSize="15sp"
                        android:text="未学完(0人)"/>
                    <TextView
                        android:id="@+id/one_key_remind"
                        android:layout_width="70dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:text="全部提醒"
                        android:gravity="center"
                        android:background="@drawable/imm_vip_shape"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#f2f4f7"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/never_learned_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dp"
                    android:background="#fff"
                    android:layout_below="@+id/never_learned_title">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </ScrollView>
    </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>
</RelativeLayout>
