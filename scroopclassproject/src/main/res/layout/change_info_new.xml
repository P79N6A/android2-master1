<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.wh.wang.scroopclassproject.activity.ChangeInfoNewActivity">

    <include layout="@layout/titlebarback_new" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/titlebarbackss">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/changeinfonew_rlayout_info"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@android:color/white">

                <RelativeLayout
                    android:id="@+id/mine_rlayout_logo"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/mine_iv_logo_bg"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/pic_shape_corner_bg2" />

                    <com.wh.wang.scroopclassproject.views.RoundImageView
                        android:id="@+id/changeinfonew_iv_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/headportrait" />

                    <TextView
                        android:id="@+id/changeinfonew_tv_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="点击更换头像"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="22dp"
                        android:src="@drawable/change_info_carme" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changeinfonew_llayout_one"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/changeinfonew_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="姓名 :"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/changeinfonew_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/changeinfonew_tv_name"
                    android:background="@null"
                    android:hint="请输入您的姓名"
                    android:textColor="@android:color/black"
                    android:textColorHint="#FF999999"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/caixian" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changeinfonew_llayout_two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/changeinfonew_tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="性别 :"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/changeinfonew_rg_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/changeinfonew_tv_sex"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/changeinfonew_rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/rb_sex_drawable_selector"
                        android:drawablePadding="10dp"
                        android:text="男"
                        android:textColor="@drawable/rb_textcolor_selector"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/changeinfonew_rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/rb_sex_drawable_selector"
                        android:drawablePadding="10dp"
                        android:text="女"
                        android:textColor="@drawable/rb_textcolor_selector"
                        android:textSize="14sp" />

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changeinfonew_llayout_three"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/changeinfonew_tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="地区 :"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/changeinfonew_et_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/changeinfonew_tv_place"
                    android:background="@null"
                    android:hint="点击设置"
                    android:textColor="@android:color/black"
                    android:textColorHint="#FF999999"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/caixian" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changeinfonew_llayout_four"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/changeinfonew_tv_nice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="品牌 :"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/changeinfonew_et_nice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/changeinfonew_tv_nice"
                    android:background="@null"
                    android:hint="请输入您的品牌"
                    android:textColor="@android:color/black"
                    android:textColorHint="#FF999999"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/caixian" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changeinfonew_llayout_five"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/changeinfonew_tv_employ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="职位 :"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/changeinfonew_et_employ"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/changeinfonew_tv_employ"
                    android:background="@null"
                    android:hint="请输入您的职位"
                    android:textColor="@android:color/black"
                    android:textColorHint="#FF999999"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/caixian" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changeinfonew_llayout_six"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/changeinfonew_tv_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="门店数量 :"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/changeinfonew_et_nums"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/changeinfonew_tv_nums"
                    android:background="@null"
                    android:hint="请输入您的门店数量"
                    android:textColor="@android:color/black"
                    android:textColorHint="#FF999999"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/caixian" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changeinfonew_llayout_seven"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/changeinfonew_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="邮箱 :"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/changeinfonew_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/changeinfonew_tv_email"
                    android:background="@null"
                    android:hint="请输入您的邮箱"
                    android:textColor="@android:color/black"
                    android:textColorHint="#FF999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/changeinfonew_save_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/changeinfonew_llayout_seven"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/white"
                android:text="保存"
                android:textColor="@color/main_color"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/titlebarback" />
    <include layout="@layout/view_address_loop"/>

</RelativeLayout>
