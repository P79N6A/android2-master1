<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="分享到"
        android:textColor="#71788a"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/share_rlayout_py"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/share_iv_py"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/share_py" />

            <TextView
                android:id="@+id/share_tv_py"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_iv_py"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="微信"
                android:textColor="#71788a" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_rlayout_pyq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/share_iv_pyq"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/share_pyq" />

            <TextView
                android:id="@+id/share_tv_pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_iv_pyq"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="朋友圈"
                android:textColor="#71788a" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_rlayout_company"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/share_iv_company"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/share_qy" />

            <TextView
                android:id="@+id/share_tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_iv_company"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="企业号"
                android:textColor="#71788a" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f4f7" />

    <RelativeLayout
        android:id="@+id/share_llayout_concel"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="取消"
            android:textColor="#71788a"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>
