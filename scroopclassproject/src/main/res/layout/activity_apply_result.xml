<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F7"
    tools:context="com.wh.wang.scroopclassproject.newproject.ui.activity.ApplyResultActivity">
    <include layout="@layout/titlebarback_new"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@+id/titlebarbackss">
        <TextView
            android:id="@+id/apply_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_success"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="26sp"
            android:textColor="#8dc63f"/>

        <TextView
            android:id="@+id/examine_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apply_success"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:visibility="gone"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="点击查看课程"
            android:textColor="#A0A4A9"
            android:textSize="12sp"
            android:background="@drawable/apply_examine_bg"/>

        <View
            android:id="@+id/cut_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F2F4F7"
            android:layout_below="@+id/examine_course"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_below="@+id/cut_line"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/apply_share_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:text="点击右侧按钮，抢占答疑群名额"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/enter_flock"
                android:layout_width="64dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/apply_bt_bg"
                android:text="进答疑群"
                android:textSize="11sp"
                android:gravity="center"
                android:textColor="#8DC63f"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
