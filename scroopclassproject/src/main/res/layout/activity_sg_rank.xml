<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:scrollbars="none"
    tools:context="com.wh.wang.scroopclassproject.newproject.fun_class.study_group.activity.activity2_0.SGRankActivity">

    <RelativeLayout
        android:id="@+id/rank_title"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@id/title_l"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/titlebackss" />

        <LinearLayout
            android:id="@+id/select_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="今日打卡"
                android:layout_marginRight="60dp"
                android:textColor="@color/main_color"
                android:textSize="18sp"
                android:lines="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sOrF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="成败榜"
                android:minEms="4"
                android:textColor="@color/video_title_v"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/line"
            android:layout_width="140dp"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/select_ll">

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/main_color"/>

        </FrameLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/rank_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rank_title"
        android:background="#fff">

    </android.support.v4.view.ViewPager>


</RelativeLayout>
