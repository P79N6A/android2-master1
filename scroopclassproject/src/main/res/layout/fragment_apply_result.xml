<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wh.wang.scroopclassproject.newproject.ui.fragment.result_frag.ApplyResultFragment">

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/success_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/apply_success"
        android:textColor="#8Dc63F"
        android:textSize="26sp"/>

    <View
        android:id="@+id/cut_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/result_tv"
        android:background="#F2F4F7"/>
    <TextView
        android:id="@+id/course_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/cut_line"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        android:textColor="#FFAD1E"
        android:text="课程"/>
    <TextView
        android:id="@+id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14sp"
        android:layout_below="@+id/cut_line"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="right"
        android:layout_alignTop="@+id/course_tv"
        android:layout_toRightOf="@+id/course_tv"
        android:textColor="#929292"
        android:text="外卖五期第三场"/>
    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/course"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="#FFAD1E"
        android:text="时间"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/time_tv"
        android:layout_toRightOf="@+id/time_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="right"
        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        android:textColor="#929292"
        android:text="勺子课堂"/>

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/time_tv"
        android:textSize="14sp"
        android:textColor="#FFAD1E"
        android:text="地点"/>


    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/address_tv"
        android:layout_toRightOf="@+id/address_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="right"
        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        android:textColor="#929292"
        android:text="18836542365"/>


    <ImageView
        android:id="@+id/member_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:src="@drawable/banner"/>
</RelativeLayout>
