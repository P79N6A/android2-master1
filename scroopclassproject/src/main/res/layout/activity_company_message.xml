<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4f7"
    tools:context="com.wh.wang.scroopclassproject.newproject.ui.activity.CompanyMessageActivity">

    <include layout="@layout/titlebarback_new"/>
    <RelativeLayout
        android:id="@+id/title"
        android:layout_below="@+id/titlebarbackss"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="已选0人"
            android:textColor="#282828"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/all_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="全选"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#282828"
            android:textSize="14sp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/member_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/share_bt"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/shape_share_list_bt"
                android:layout_below="@+id/member_list"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="11sp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
