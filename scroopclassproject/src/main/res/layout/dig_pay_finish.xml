<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_corner"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/zhanweitu"/>

    <TextView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="10dp"
        android:textColor="#282828"
        android:layout_centerHorizontal="true"
        android:text="感谢您购买"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/flag"
        android:layout_marginTop="20dp"
        android:textColor="#556378"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="我们已发送通知至工作人员\n核实成功后会第一时间与您联系"/>

    <TextView
        android:id="@+id/relieve"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/register_next_bg"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="32dp"
        android:text="完成"/>
</RelativeLayout>