<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/select_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unused"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:text="未使用"
            android:textColor="@color/main_color"/>

        <TextView
            android:id="@+id/used"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:text="已使用"
            android:textColor="@color/video_title_v"/>

        <TextView
            android:id="@+id/past_due"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:text="已失效"
            android:textColor="@color/video_title_v"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/move_line"
        android:layout_width="128dp"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/select_title">

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/apply_share_bg_3dp"/>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/coupon_vp"
        android:layout_below="@+id/select_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f4f7">

    </android.support.v4.view.ViewPager>
</RelativeLayout>
