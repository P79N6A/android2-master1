<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.wh.wang.scroopclassproject.activity.MineFreebackctivity">

    <include layout="@layout/titlebarback_new" />

    <ListView
        android:id="@+id/mine_feedback_lv_msg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#0000" />

    <LinearLayout
        android:id="@+id/mine_feedback_llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mine_feedback_et_Msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="点击输入消息..."
            android:textColor="#FF000000"
            android:textColorHint="#FF999999"
            android:textSize="18sp" />

        <Button
            android:id="@+id/mine_feedback_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送" />
    </LinearLayout>
</LinearLayout>
