<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_new"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#fff">
        <ImageView
            android:id="@+id/titlebar_new_iv_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/new_logo" />

        <RelativeLayout
            android:id="@+id/titlebar_new_rlayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/titlebar_new_iv_logo"
            android:background="@drawable/tv_search_bg_selector">

            <TextView
                android:id="@+id/titlebar_new_rlayout_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="搜索更多餐饮线上课程"
                android:textColor="#9eadc3"
                android:textSize="14sp" />
        </RelativeLayout>

</RelativeLayout>
