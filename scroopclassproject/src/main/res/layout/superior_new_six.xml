<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/superiror_six_rlayout"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/superiror_six_rlayout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/superiror_six_tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="/  经典课程  /"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/superiror_six_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/superiror_six_iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/rightarro" />

            <TextView
                android:id="@+id/superiror_six_tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/superiror_six_iv_more"
                android:text="更多"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/superiror_six_llayout_one"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_below="@+id/superiror_six_rlayout_title"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/superiror_six_rlayout_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/superior_item_rlayout_one_marginleft"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/superiror_six_iv_one"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ivnull" />

            <TextView
                android:id="@+id/superiror_six_title_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/superiror_six_iv_one"
                android:layout_marginTop="-10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="员工幸福是一切餐厅经营的原点"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_six_maintalk_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:text="主讲"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_six_study_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/superior_item_rlayout_marginbottom"
                android:text="234已学"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/superiror_six_rlayout_two"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/superior_item_rlayout_two_marginright"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/superiror_six_iv_two"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ivnull" />

            <TextView
                android:id="@+id/superiror_six_title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/superiror_six_iv_two"
                android:layout_marginTop="-10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="员工幸福是一切餐厅经营的原点"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_six_maintalk_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:text="主讲"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_six_study_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/superior_item_rlayout_marginbottom"
                android:text="234已学"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/superiror_six_llayout_two"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_below="@+id/superiror_six_llayout_one"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/superiror_six_rlayout_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/superior_item_rlayout_one_marginleft"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/superiror_six_iv_three"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ivnull" />

            <TextView
                android:id="@+id/superiror_six_title_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/superiror_six_iv_three"
                android:layout_marginTop="-10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="员工幸福是一切餐厅经营的原点"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_six_maintalk_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:text="主讲"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_six_study_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/superior_item_rlayout_marginbottom"
                android:text="234已学"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/superiror_six_rlayout_four"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/superior_item_rlayout_two_marginright"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/superiror_six_iv_four"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ivnull" />

            <TextView
                android:id="@+id/superiror_six_title_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/superiror_six_iv_four"
                android:layout_marginTop="-10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="员工幸福是一切餐厅经营的原点"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_six_maintalk_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:text="主讲"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/superiror_six_study_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/superior_item_rlayout_marginbottom"
                android:text="234已学"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
